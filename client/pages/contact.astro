---
import Layout from "@/layouts/Layout.astro";
import "@/styles/global.css";
import {
  FacebookHoverCard,
  InstagramHoverCard,
  YelpHoverCard,
  LinkedInHoverCard,
} from "../components/ui/HoverCardTest";
---

<Layout title="Freedom Butchers - Contact" headerTitle="Contact Us">
  <main class="p-4 sm:p-6 lg:p-8 bg-gray-100 min-h-[80vh] dark:bg-gray-900">
    <div
      class="bg-blue-800 p-6 rounded-lg shadow-xl mb-8 max-w-3xl mx-auto mt-24"
    >
      <h2 class="text-3xl font-bold text-white mb-2 text-center">Contact Us</h2>
      <p class="text-gray-200 dark:text-gray-300 text-center">
        Weâ€™d love to hear from you! Reach out with any questions or feedback.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-12">
      <div
        class="bg-white p-6 rounded-lg shadow-md transition-transform transform hover:scale-105 hover:shadow-lg dark:bg-gray-700"
      >
        <h3 class="text-xl font-semibold mb-2 dark:text-white">Get in Touch</h3>
        <p class="text-gray-700 dark:text-gray-300 mb-4">
          You can reach us via:
        </p>
        <ul class="space-y-2 text-base max-[425px]:text-sm">
          <li>
            <strong>Email:</strong>
            <a
              class="text-blue-600 dark:text-yellow-400 hover:underline"
              href="mailto:contact@freedombutchers.com"
              >contact@freedombutchers.com</a
            >
          </li>
          <li>
            <strong>Phone:</strong>
            <a
              class="text-blue-600 dark:text-yellow-400 hover:underline"
              href="tel:+7089660543">(708) 966-0543</a
            >
          </li>
          <li>
            <strong>Address:</strong> 8600 West 159th Street, Suite 6, Orland Park,
            IL, United States
          </li>
        </ul>
      </div>

      <div
        class="bg-white p-6 rounded-lg shadow-md transition-transform transform hover:scale-105 hover:shadow-lg dark:bg-gray-700"
      >
        <h3 class="text-xl font-semibold mb-2 dark:text-white">
          Connect with Us
        </h3>
        <div class="flex flex-wrap gap-4 justify-center">
          <FacebookHoverCard client:load />
          <InstagramHoverCard client:load />
          <YelpHoverCard client:load />
          <LinkedInHoverCard client:load />
        </div>
      </div>

      <div
        class="bg-white p-6 rounded-lg shadow-md transition-transform transform hover:scale-105 hover:shadow-lg dark:bg-gray-700"
      >
        <h3 class="text-xl font-semibold mb-2 dark:text-white">Feedback</h3>
        <p class="text-gray-700 dark:text-gray-300 mb-4">
          We value your feedback! Please let us know how we can improve.
        </p>
        <button
          class="bg-blue-600 dark:bg-stone-500 dark:hover:bg-stone-600 dark:text-white text-white px-6 py-2 rounded transition-colors duration-200 hover:bg-blue-700"
        >
          <a href="/feedback">Feedback Form</a>
        </button>
      </div>
    </div>
  </main>
</Layout>
