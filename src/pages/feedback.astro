---
import Layout from "@/layouts/Layout.astro";
import "@/styles/global.css";
import FeedbackForm from "../components/Feedback/FeedbackForm";
---

<Layout title="Freedom Butchers - Feedback" headerTitle="Feedback">
  <main
    class="flex justify-center items-start bg-gray-100 dark:bg-gray-900 p-10"
  >
    <section
      id="feedback"
      class="bg-white dark:bg-gray-800 text-gray-800 dark:text-gray-200 p-8 rounded-lg shadow-md transition-transform duration-300 hover:shadow-lg max-w-md w-full"
    >
      <h2 class="text-4xl font-bold mb-6 text-center">
        We Value Your Feedback
      </h2>
      <p class="mb-6 text-lg leading-relaxed text-center">
        Please share your thoughts about your experience with us. Your feedback
        helps us improve our services.
      </p>

      <FeedbackForm client:load />
    </section>
  </main>
</Layout>
